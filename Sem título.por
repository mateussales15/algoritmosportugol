programa {
  cadeia nome
  inteiro idade
  inteiro anonascimento
  inteiro diferenca
  funcao inicio() {
    escreva("qual e seu nome?")
    leia(nome)
    escreva("em que ano voce nasceu?")
    leia(anonascimento)
    idade = (2024-anonascimento)
    diferenca = (50-idade)
    escreva ("ola"+ nome +"voce tem"+ idade +"anos, e tera 50 anos em"+ diferenca +"anos")
  }
}
